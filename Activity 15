using System;
using System.Linq;
using System.Collections.Generic;

namespace HelloWold;

public static class Program
{
    public static void Main(String[] args)
    {
        List<string> courses = new List<string>();

        Console.WriteLine("Register up to 6 course codes (5 characters each):");

        while (courses.Count < 6)
        {
            Console.Write($"Course #{courses.Count + 1}: ");
            string input = Console.ReadLine();

            if (input.Length != 5)
            {
                Console.WriteLine("Error: Course code must be 5 characters long.");
            }
            else if (courses.Contains(input.ToUpper()))
            {
                Console.WriteLine("Error: Course code already registered.");
            }
            else
            {
                courses.Add(input.ToUpper());
                Console.WriteLine("Course added successfully.");
            }
        }

        Console.WriteLine("\nRegistered Courses:");
        foreach (string code in courses)
        {
            Console.WriteLine($"- {code}");
        }
    }
}
